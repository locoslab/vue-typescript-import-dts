{
	"compilerOptions": {
		"lib": ["dom", "es5", "es2015"],
		"target": "es2015",
		"module": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"outDir": "build"
	},
	"exclude": ["node_modules", "build"],
	"atom": {
		"rewriteTsconfig": false
	},
	"compileOnSave": false
}
